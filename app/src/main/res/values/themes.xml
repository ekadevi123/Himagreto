<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Himagreto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mustard</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/biruTeks</item>
    </style>
    <style name="Theme.FullScreen" parent="@style/Theme.Himagreto">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:navigationBarColor">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- to hide white screen in start of window -->
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="himaapptext">
        <item name="android:fontFamily">@font/jostregular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#44288A</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="good_morning">
        <item name="android:fontFamily">@font/jostregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#F6E6B6</item>
    </style>
    <style name="ikhlas_tauf">
        <item name="android:fontFamily">@font/jostbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F6E6B6</item>
        <item name="android:shadowColor">#26000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>