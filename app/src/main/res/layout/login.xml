<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <View
        android:id="@+id/ellipse_5"
        android:layout_width="59dp"
        android:layout_height="213dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_elips"/>
    <View
        android:id="@+id/ellipse_4"
        android:layout_width="75dp"
        android:layout_height="213dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="285dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="371dp"
        android:background="@drawable/ic_elips2"/>
    <TextView
        android:id="@+id/himagreto_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="@string/himaaptext"
        android:textAppearance="@style/himaapptext"
        android:gravity="center_horizontal|top"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="171dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/unguTombol"
            app:hintTextColor="@color/unguTombol"
            app:boxStrokeColor="@null"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <EditText
                android:id="@+id/login_nimentry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/nim"
                android:inputType="text"
                android:textColor="@color/biruTeks"
                android:background="@drawable/bgentry"
                android:fontFamily="@font/jostregular"
                android:importantForAutofill="no"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputpass"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/unguTombol"
            app:hintTextColor="@color/unguTombol"
            app:passwordToggleEnabled="true"
            app:passwordToggleContentDescription="toggle"
            app:passwordToggleTint="@color/biruTeks"
            app:boxStrokeColor="@null"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/login_passentry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/biruTeks"
                android:background="@drawable/bgentry"
                android:fontFamily="@font/jostregular"
                android:importantForAutofill="no"/>
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btmasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/masuk"
        android:fontFamily="@font/jostmedium"
        android:textSize="14sp"
        android:background="@drawable/button"
        app:backgroundTint="@color/unguTombol"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llpoweredby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tvpoweredby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        android:fontFamily="@font/jostregular"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/himaaptext"
        android:src="@drawable/himagreto"
        android:alpha="0.3"/>
    </LinearLayout>


</RelativeLayout>