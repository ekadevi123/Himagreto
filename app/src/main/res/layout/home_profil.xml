<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="275dp"
    android:paddingBottom="60dp"
    android:orientation="vertical"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profil_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/kartu"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/badge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/nama"
                    android:contentDescription="@string/badge_nama"/>
                <TextView
                    android:id="@+id/profil_nama"
                    android:layout_toEndOf="@id/badge_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="45dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/silahkan_isi_nama_kamu"
                    android:textSize="16sp"
                    android:fontFamily="@font/jostmedium"
                    android:textColor="@color/biruAtas"/>
                <ImageView
                    android:id="@+id/edit_nama"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/edit"
                    android:contentDescription="@string/icon_edit"
                    app:tint="#50000000" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profil_domisili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/kartu"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/badge_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/badge_home"
                    android:src="@drawable/home"/>
                <TextView
                    android:id="@+id/profil_domisili"
                    android:layout_toEndOf="@id/badge_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="45dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/silahkan_isi_alamat_kamu"
                    android:textSize="16sp"
                    android:fontFamily="@font/jostmedium"
                    android:textColor="@color/biruAtas"/>
                <ImageView
                    android:id="@+id/edit_domisili"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/edit"
                    android:contentDescription="@string/icon_edit"
                    app:tint="#50000000" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profil_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/kartu"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/badge_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/badge_hp"
                    android:src="@drawable/badge_hp"/>
                <TextView
                    android:id="@+id/profil_hp"
                    android:layout_toEndOf="@id/badge_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/silahkan_isi_nomor_hp_kamu"
                    android:textSize="16sp"
                    android:fontFamily="@font/jostmedium"
                    android:textColor="@color/biruAtas"/>
                <ImageView
                    android:id="@+id/edit_phone"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/edit"
                    android:contentDescription="@string/icon_edit"
                    app:tint="#50000000" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profil_hbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/kartu"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/badge_hbd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/badge_hbd"
                    android:src="@drawable/badge_hbd"/>
                <TextView
                    android:id="@+id/profil_hbd"
                    android:layout_toEndOf="@id/badge_hbd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="45dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/silahkan_isi_tempat_tanggal_lahir_kamu"
                    android:textSize="16sp"
                    android:fontFamily="@font/jostmedium"
                    android:textColor="@color/biruAtas"/>
                <ImageView
                    android:id="@+id/edit_hbd"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/edit"
                    android:contentDescription="@string/icon_edit"
                    app:tint="#50000000" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>