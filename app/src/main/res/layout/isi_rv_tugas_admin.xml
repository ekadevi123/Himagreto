<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/isi_rv_tugas_cardview_tugasnya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/kartu"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_tugas_isi_rv_tugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="100dp"
                android:layout_marginVertical="5dp"
                android:text="Laporan Kelompok Biomet Hama dan Penyakit Tanaman 4 Grafik"
                android:textSize="16sp"
                android:fontFamily="@font/jostmedium"
                android:textColor="@color/biruTeks"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/admin_edit_tugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/edit"/>
            <ImageView
                android:id="@+id/admin_hapus_tugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/hapus"/>
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dedlen"
                android:layout_below="@id/text_tugas_isi_rv_tugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/ijodedlen"
                app:cardCornerRadius="10dp"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/jam"/>
                    <TextView
                        android:id="@+id/dedlen_tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="Des 4"
                        android:textSize="16sp"
                        android:fontFamily="@font/jostmedium"
                        android:textColor="@color/putih"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>